      <div class="custom-wrap">
        <h1 class="cover-heading">AutoDex</h1>
        <p class="lead">Find and add your favorite cars using the form below. This application uses NHTSA API to grab vehicle information and Unsplash API to pull vehicle images.</p>

        <form action="/cars" method="GET">
            <label class="font-weight-bold mt-2" for="selectmake">Select Make</label>
            <select class="form-control form-control-lg" name="selectmake" id="selectmake">
            <% data.forEach(element => { %>
                <% if(element.Country === 'UNITED STATES (USA)' && element.Mfr_CommonName !== null && element.Mfr_CommonName !== 'Buell' && element.Mfr_CommonName !== 'Volvo (Truck/Bus') { %>
                <option value="<%= element.Mfr_CommonName %>"><%= element.Mfr_CommonName %></option>
                <% } %>
            <% }); %>
            </select>
                <button class="brn btn-lg btn-primary mt-2" type="submit">Search AutoDex</button>
        </form>
      </div>
