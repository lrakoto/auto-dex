<h1>Favorites</h1>

<% favorites.forEach((f) =>{ %> 
    <img src="<%= f.image %>" alt="<%= f.make %> <%= f.model %>">
    <p><%= f.make %> <%= f.model %></p>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal<%= f.id %>">
        Edit Image
    </button>



<!-- Modal -->
<div class="modal fade" id="exampleModal<%= f.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModal<%= f.id %>Label" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModal<%= f.id %>Label">Enter new image link for <%= f.make %> <%= f.model %>  below</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form method="POST" action="/cars/favorites/edit/<%= f.id %>" >
            <div class="form-group">
              <input class="form-control" id="newimagelink" name="newimagelink" placeholder="<%= f.image %>" required>
              <input type="hidden" id="favid" name="favid" value="<%= f.id %>">
            </div>
          
            <input type="submit" class="btn btn-primary">
          </form>
        </div>
        
      </div>
    </div>
  </div>

  <% }) %> 